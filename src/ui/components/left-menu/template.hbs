<ul class="vertical menu">
  {{#each @data key="@index" as |project|}}
  <li>
    <entity-link @name={{project.name}} @projectId={{project.slug}} />
    <ul class="menu vertical nested">
      {{#each project.children key="@index" as |child|}}
        <li class="{{child.type}}">
          <entity-link @name={{child.name}} @projectId={{project.slug}} @moduleId={{child.slug}} />
        </li>
      {{/each}}
    </ul>
  </li>
  {{/each}}
</ul>
